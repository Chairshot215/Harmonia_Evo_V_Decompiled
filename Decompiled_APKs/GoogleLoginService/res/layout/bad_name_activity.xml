        </RelativeLayout>
    </ScrollView>
    <LinearLayout android:id="@id/buttons" style="@style/StackedButtons">
        <Button android:id="@id/back_button" android:layout_width="fill_parent" android:text="@string/bad_name_decline_button_label" style="@style/Button" />
        <Button android:id="@id/next_button" android:layout_width="fill_parent" android:text="@string/bad_name_skip_button_label" style="@style/Button" />
    </LinearLayout>
</view>